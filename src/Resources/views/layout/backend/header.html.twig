{% import '@SymfonyAdmin/macros.html.twig' as UI %}

<header>
  <div class="header">
    <a href="#" class="sidebar-mobile-toggle js-sidebar-toggle">
      <i class="zmdi zmdi-menu"></i>
    </a>

    <div class="header-global-nav">
      <div class="global-nav">
        {{ header_button|default('')|raw }}
        <span>{{ header_title|default('')|raw }}</span>
      </div>
    </div>

    <div class="header-action-bar">
      {% block buttons %}
        {% set label %}
          <div class="header-profile profile-avatar">
            {% if app.user.photo is defined %}
              <img src="{{ asset(app.user.photo|default('images/avatar.png')) }}" />
            {% else %}
              <img src="{{ asset('images/avatar.png') }}" />
            {% endif %}
          </div>
        {% endset %}

        {{ UI.dropdownButton({
          label: label,
          right: true,
          aCss: 'border-0',
          elements: [
            {
              path: path('security_logout'),
              label: 'Log Out',
              iCss: 'zmdi zmdi-square-right'
            }
          ]
        }) }}
      {% endblock %}
    </div>
  </div>
</header>
