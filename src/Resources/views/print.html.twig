{% block stylesheets %}
  <style type="text/css">
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
      font-size: 12px;
      font-weight: 200;
      line-height: 1.5;
      color: #212529;
    }

    /*-------------------
        Fonts
    --------------------*/

    .font-size-xs {
      font-size: 10px;
    }

    .font-size-s {
      font-size: 12px;
    }

    .font-size-m {
      font-size: 13px;
    }

    .font-size-l {
      font-size: 16px;
    }

    .font-size-xl {
      font-size: 20px;
    }

    .font-size-xxl {
      font-size: 24px;
    }

    /*-------------------
        Table
    --------------------*/

    table {
      border-collapse: collapse;
    }

    .table {
      width: 100%;
      max-width: 100%;
      background-color: transparent;
      margin: 10px 0;
    }

    .table .table {
      margin-top: 0;
    }

    .table th,
    .table td {
      white-space: nowrap;
      vertical-align: top;
      padding: 2px 5px;
      border: 1px solid #212529;
      position: relative;
    }

    .table th {
      text-align: left;
      background-color: #ccc;
      border-width: 2px;
    }

    .table td.word-wrap {
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .table td.borderless {
      border: 0;
    }

    .table-borderless td {
      border: 0;
    }

    /*-------------------
        Misc.
    --------------------*/

    .alert {
      position: relative;
      padding: 0.75rem 1.25rem;
      margin-bottom: 1rem;
      border: 1px solid transparent;
      border-radius: 0.25rem;
    }

    .alert-success {
      color: #155724;
      background-color: #d4edda;
      border-color: #c3e6cb;
    }

    .alert-success hr {
      border-top-color: #b1dfbb;
    }

    .alert-danger {
      color: #721c24;
      background-color: #f8d7da;
      border-color: #f5c6cb;
    }

    .alert-danger hr {
      border-top-color: #f1b0b7;
    }

    /*-------------------
        Misc.
    --------------------*/

    .align-left {
      text-align: left;
    }

    .align-right {
      text-align: right;
    }

    .align-center {
      text-align: center;
    }

    .weight-bold {
      font-weight: 700;
    }

    hr {
      margin: 10px 0;
      border: 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #fff;
    }

    a, ol, p, ul {
      font-size: 13px;
    }

    a {
      text-decoration: underline;
    }

    ol {
      list-style: decimal;
    }

    ul {
      list-style: disc;
    }

    ol, ul {
      margin-left: 1.75em;
      padding: 0;
      margin-top: 1em;
      margin-bottom: 1em;
    }

    pre {
      margin-top: 0;
      margin-bottom: 16px;
      word-wrap: normal;
      padding: 16px;
      overflow: auto;
      font-size: 85%;
      line-height: 1.45;
      background-color: #f7f7f7;
      border-radius: 3px;
    }
  </style>
{% endblock %}

{% block content %}{% endblock %}
