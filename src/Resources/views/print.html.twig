{% macro stylesheets() %}
  <style type="text/css">
    body {
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol";
      font-size: 12px;
      font-weight: 200;
      line-height: 1.5;
      color: #212529;
    }

    /*-------------------
        Fonts
    --------------------*/

    .font-size-xs {
      font-size: 10px;
    }

    .font-size-s {
      font-size: 12px;
    }

    .font-size-m {
      font-size: 13px;
    }

    .font-size-l {
      font-size: 16px;
    }

    .font-size-xl {
      font-size: 20px;
    }

    .font-size-xxl {
      font-size: 24px;
    }

    /*-------------------
        Table
    --------------------*/

    table {
      border-collapse: collapse;
    }

    .table {
      width: 100%;
      max-width: 100%;
      background-color: transparent;
      margin: 10px 0;
    }

    .table .table {
      margin-top: 0;
    }

    .table th,
    .table td {
      white-space: nowrap;
      vertical-align: top;
      padding: 2px 5px;
      border: 1px solid #212529;
      position: relative;
    }

    .table th {
      text-align: left;
      background-color: #ccc;
      border-width: 2px;
    }

    .table td.word-wrap {
      white-space: pre-wrap;
      word-wrap: break-word;
    }

    .table td.borderless {
      border: 0;
    }

    .table-borderless td {
      border: 0;
    }

    /*-------------------
        Signature Table
    --------------------*/

    .table-signature {
      width: 400px;
    }

    .table-signature.small {
      width: 120px;
    }

    .table-signature.center {
      margin: 20px 20% 20px;
      text-align: center;
    }

    .table-signature.right {
      margin: 20px 80% 20px;
    }

    .table-signature td {
      border: none;
    }

    .table-signature td.border {
      border: none !important;
      border-bottom: 1px solid #ccc !important;
    }

    .table-signature td.title {
      padding: 20px;
    }

    .table-signature td img {
      position: absolute;
      top: -15px;
      left: 0;
      background-color: transparent;
    }

    .table-signature td i.bookmark {
      display: inline-block;
      vertical-align: middle;
      position: relative;
      height: 2em;
      width: 2em;
      overflow: hidden;
      -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
      box-sizing: border-box;
      color: #eb4536;
    }

    .table-signature td i.bookmark:before,
    .table-signature td i.bookmark:after {
      content: '';
      pointer-events: none;
      display: block;
      position: absolute;
      -webkit-box-sizing: content-box;
      -moz-box-sizing: content-box;
      box-sizing: content-box;
    }

    .table-signature td i.bookmark:before {
      top: .3em;
      left: .25em;
      border-style: solid;
      border-width: .75em;
      border-bottom-color: transparent;
      -webkit-transform: scale(1, 1.4);
      -ms-transform: scale(1, 1.4);
      transform: scale(1, 1.4);
    }

    @media (max-width: 767.98px) {
      .table-signature.center {
        margin-left: 20px !important;
      }

      .table-signature.right {
        margin-left: 70% !important;
      }
    }

    /*-------------------
        Misc.
    --------------------*/

    .alert {
      position: relative;
      padding: 0.75rem 1.25rem;
      margin-bottom: 1rem;
      border: 1px solid transparent;
      border-radius: 0.25rem;
    }

    .alert-success {
      color: #155724;
      background-color: #d4edda;
      border-color: #c3e6cb;
    }

    .alert-success hr {
      border-top-color: #b1dfbb;
    }

    .alert-danger {
      color: #721c24;
      background-color: #f8d7da;
      border-color: #f5c6cb;
    }

    .alert-danger hr {
      border-top-color: #f1b0b7;
    }

    /*-------------------
        Misc.
    --------------------*/

    .align-left {
      text-align: left;
    }

    .align-right {
      text-align: right;
    }

    .align-center {
      text-align: center;
    }

    .weight-bold {
      font-weight: 700;
    }

    hr {
      margin: 10px 0;
      border: 0;
      border-top: 1px solid #eee;
      border-bottom: 1px solid #fff;
    }

    a, ol, p, ul {
      font-size: 13px;
    }

    a {
      text-decoration: underline;
    }

    ol {
      list-style: decimal;
    }

    ul {
      list-style: disc;
    }

    ol, ul {
      margin-left: 1.75em;
      padding: 0;
      margin-top: 1em;
      margin-bottom: 1em;
    }

    pre {
      margin-top: 0;
      margin-bottom: 16px;
      word-wrap: normal;
      padding: 16px;
      overflow: auto;
      font-size: 85%;
      line-height: 1.45;
      background-color: #f7f7f7;
      border-radius: 3px;
    }
  </style>
{% endmacro %}

{% block header %}
  {% import _self as UI %}
  {{ UI.stylesheets }}
{% endblock %}

{% block content %}
  {% import _self as UI %}
  {{ UI.stylesheets }}
{% endblock %}

{% block footer %}
  {% import _self as UI %}
  {{ UI.stylesheets }}
{% endblock %}
